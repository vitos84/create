<%- include('../layout/header'); -%>
<div class="main">
    <div class="container">
      <div class="content add-post">

      <form method="post" class="post-form">
        <h2>Добавление поста</h2>
        <div class="form-group">
          <label for="post-title">Заголовок</label>
          <input type="text" id="post-title" name="title" />
        </div>
        <div class="form-group">
            <label for="post-body">Текст</label>
            <textarea id="post-body"></textarea>
        </div>
        <div class="buttons">
            <button class="save-button secondary-inverse">Сохранить как черновик</button>
            <button class="publisch-button">Опубликовать</button>
        </div>
       </form>
      <form enctype="multipart/form-data" name="fileinfo" id="fileinfo" method="post">
        <input type="file" name="file" required>
        <button class="upload-button"> Загрузит</button>
      </form>
      </div>
<%- include('../layout/sidebar'); -%>     
    </div>
  </div>

<%- include('../layout/footer'); -%> 
