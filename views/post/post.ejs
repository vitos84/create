<%- include('../layout/header'); -%>
<div class="main">
    <div class="container">
      <div class="content">
        
        <div class="post">
          <div class="bottom">
            <h2><%= post.title%></h2>
          </div>
          <div class="body">
            <p><%=post.body%></p>
          </div>
          <div class="bottom">
            <div class="autor">
              Автор:
              <a href="/users/<%= post.owner.login%>"><%= post.owner.login%></a>
            </div>
           
          </div>
        </div>
       <div class="coments" id='<%= post.id%>'>
         <h3>Коментарий</h3>
         <div class="coment-list">
          <%- include('../layout/coments.ejs', {items: coments}); -%>
          
           <form class='coment'>
             <textarea name="body"></textarea>
             <div class="buttons">
               <button class="cancel secondary">Отмена</button>
               <button class="send">Отправить</button>
             </div>
           </form>
         </div>
       </div>
      
      </div>
<%- include('../layout/sidebar'); -%>     
    </div>
  </div>

<%- include('../layout/footer'); -%> 
